    <inheritable>true</inheritable>
    <nameMaker>NamerPersonPaccaMechMan</nameMaker>
    <nameMakerFemale>NamerPersonPaccaMechMan</nameMakerFemale>
    <chanceToUseNameMaker>1</chanceToUseNameMaker>
